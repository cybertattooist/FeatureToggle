<div class="simple-form">

    <div class="form-group">
        <label for="movie-name">Name</label>
        <input @bind="Feature!.Name" type="text" class="form-control" id="movie-name" />
    </div>
    
    <p></p>
    
    <div class="form-group">
        <button @onclick="@(() => Feature!.Status = !Feature.Status)" class="btn btn-primary">@Feature!.Status</button>
    </div>

    <p></p>

    <button @onclick="@SaveNewFeature" class="btn btn-primary">Submit</button>
    <button @onclick="ModalInstance!.CancelAsync" class="btn btn-secondary">Cancel</button>
    
    <ErrorMessege Messege="The same name in list!!!"></ErrorMessege>
</div>